<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.amazon.whisperplay.fling.media.player">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:label="@string/app_name" >

        <uses-library android:name="com.amazon.whisperplay.contracts" android:required="true" />

        <service android:name=".CustomMediaPlayerService" android:exported="true"></service>
        <meta-data android:resource="@xml/whisperplay" android:name="whisperplay"/>

        <activity
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|layoutDirection|fontScale"
            android:label="@string/app_name"
            android:name="com.amazon.whisperplay.fling.media.player.activity.MediaViewer"
            android:launchMode="singleInstance"
            android:finishOnTaskLaunch="true" >
        </activity>

        <activity
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:name=".LauncherSplashActivity"
            android:label="@string/title_activity_launcher_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>

