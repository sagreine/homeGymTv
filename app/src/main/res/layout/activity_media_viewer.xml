<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.amazon.whisperplay.fling.media.player.activity.MediaViewer">

    <TextView
        android:id="@+id/textView"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <SurfaceView
        android:id="@+id/surfaceViewPlayer"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:keepScreenOn="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/media_descript654654ion"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceViewPlayer"
        android:layout_marginStart="13dp"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="254dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="here is a description of a video"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pictureImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/paused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/fake_pause"
        android:textColor="@android:color/secondary_text_light_nodisable"
        android:textSize="70sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/media_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#AA000000"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/media_title"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="13dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/empty"
            android:textColor="@android:color/white"
            android:textSize="27sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/currentPosition"
            android:background="@android:color/transparent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/currentPosition"
            android:layout_width="70dp"
            android:layout_height="210dp"
            android:layout_above="@+id/media_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:maxLines="1"
            android:text="@string/init_time"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/totalDuration"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_above="@+id/media_title"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:maxLines="1"
            android:text="@string/init_time"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/media_description"
        android:layout_width="473dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceViewPlayer"
        android:layout_marginStart="13dp"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="254dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="here is a description of a video"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <View
        android:id="@+id/fake_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#D9000000"
        android:padding="0px" />

    <ProgressBar
        android:id="@+id/media_loading_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="invisible" />
</RelativeLayout>