<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amazon.whisperplay.fling.media.player.activity.MediaViewer" >

    <SurfaceView
        android:id="@+id/surfaceViewPlayer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:visibility="gone" />

    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pictureImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/paused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:text="@string/fake_pause"
        android:textSize="70sp"
        android:textColor="@android:color/secondary_text_light_nodisable"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/media_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:background="#AA000000"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/currentPosition"
            android:background="@android:color/transparent"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/currentPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/media_title"
            android:layout_marginStart="13dp"
            android:text="@string/init_time"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/totalDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/media_title"
            android:layout_marginEnd="13dp"
            android:text="@string/init_time"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/media_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="15dp"
            android:layout_above="@+id/media_description"
            android:text="@string/empty"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="27sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/media_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="12dp"
            android:lines="2"
            android:ellipsize="end"
            android:text="@string/empty"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:id="@+id/fake_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#D9000000"
        android:padding="0px" />

    <RelativeLayout
        android:id="@+id/dialogLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:id="@+id/media_loading_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_centerHorizontal="true" />

     </RelativeLayout>
    
</RelativeLayout>